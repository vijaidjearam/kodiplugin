<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.vijai"
version="3.0.15"
name="vijai"
provider-name="vijai">
<requires>
  <import addon="xbmc.python" version="2.25.0"/>
  <import addon="script.module.routing" version="0.2.0"/>
  <import addon="script.module.resolveurl" optional="true"/>
  <import addon="script.module.requests" optional="true"/>
  <import addon="script.module.t0mm0.common" version="2.1.1"/>
</requires>
<extension point="xbmc.python.pluginsource" library="main.py">
  <provides>video</provides>
</extension>
<extension point="xbmc.addon.metadata">
  <summary lang="en">Video Plugin</summary>
  <description lang="en_GB">video plugin for Kodi mediacenter.</description>
  <disclaimer lang="en_GB">The plugin only provides movies or series thats available in the internet.</disclaimer>
  <assets>
    <icon>icon.png</icon>
  </assets>
  <news>Updated with latest artwork metadata</news>
</extension>
</addon>

    <addon id="repository.vijai" name="vijai" version="0.1.1" provider-name="vijai">
        <requires>
            <import addon="xbmc.addon" version="12.0.0"/>
        </requires>
        <extension point="xbmc.addon.repository" name="vijai">
            <info compressed="false">http://vijai.host22.com/_repo/addons.xml</info>
            <checksum>http://vijai.host22.com/_repo/addons.xml.md5</checksum>
            <datadir zip="true">http://vijai.host22.com/_repo/</datadir>
            <hashes>false</hashes>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary>tamilgun,vumoo and onlinemoviewatchs</summary>
            <description>tamilgun,vumoo and onlinemoviewatchs</description>
            <platform>all</platform>
    </extension>
</addon>

<addon id="script.module.urlresolver" name="URLResolver" version="4.0.15" provider-name="Eldorado, tknorris, tvaddons">
	<requires>
		<import addon="xbmc.python" version="2.1.0" />
		<import addon="plugin.video.youtube" optional="true" />
		<import addon="script.module.python.twitch" optional="true" />
		<import addon="script.module.cryptopy" version="1.2.6" optional="true" />
	</requires>
	<extension point="xbmc.python.module" library="lib" />
	<extension point="xbmc.python.pluginsource" library="lib/default.py" />
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary lang="en">Resolve common video host URL's to be playable in XBMC/Kodi.</summary>
		<summary lang="hr">Prilagodi najčešće URL-ove video izvora kako bi radili u XBMC/Kodiju.</summary>
		<description lang="en">Resolve common video host URL's to be playable in XBMC/Kodi, simplify addon development of video plugins requiring multi video hosts.</description>
		<description lang="hr">Prilagodi najčešće URL-ove video izvora kako bi radili u XBMC/Kodiju, pojednostavnjuje razvoj priključaka za video dodatke koji zahtjevaju višestruke video izvore.</description>
        <forum>https://www.tvaddons.co/forums</forum>
        <website>https://www.tvaddons.co</website>
	</extension>
</addon>
</addons>
